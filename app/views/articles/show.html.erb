<div class="container">
  <div class="row">
    <div class="column column-60 column-offset-20 main-logo">
      <p id="notice"><%= notice %></p>

      <h3>
        <%= @article.title %>
      </h3>

      <h5>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <%= @article.body %>
      </h5>
      <small>
        Original source: <%= link_to @article.source[0..@article.source.size/3.to_i]+"...", @article.source, class: "silver"%> <br />
      </small>
      <p class: "purple">
      <%= @article.views_count %> view(s) |<font class="up-vote-color">
      +<%= @article.positive_votes %></font> / <font class="down-vote-color">-<%= @article.negative_votes %></font>
      </p>

      <%= link_to "Upvote", upvote_article_path(@article), "data-method": "put", class: "purple" %> |
      <%= link_to "Downvote", downvote_article_path(@article), "data-method": "put", class: "purple"%> |
      <%= link_to 'Edit', edit_article_path(@article), class: "purple" %> |
      <%= link_to 'Back', articles_path, class: "purple" %>
    </div>
  </div>
</div>
